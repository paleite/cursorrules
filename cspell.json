    // Analytics & tracking
    "gtag",
    "matomo",
    "plausible",
    "mixpanel",
    "metrica",
    "ganalytics",

    // Deployment & hosting
    "vercel",
    "netlify",
    "cloudflare",
    "amazonaws",
    "digitalocean",
    "heroku",

    // Development patterns
    "memoize",
    "debounce",
    "throttle",
    "middleware",
    "middlewares",
    "codegen",
    "codebase",
    "monorepo",
    "vendored",
    "treeshake",
    "transpile",
    "polyfill",

    // Terminal utilities
    "setaf",
    "tput"
  ],
  "overrides": [
    {
      "filename": "**/locales/sv/**/*.json",
      "language": "en,sv"
    },
    {
      "filename": "**/locales/de/**/*.json",
      "language": "en,de"
    }
  ],
  "import": []
}
